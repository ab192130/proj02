<div class="panel panel-default">
    <div class="panel-heading">Upload Image</div>
    <div class="panel-body">
        <div id="message"></div>
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            asd
        </div>

        <% if(typeof image !== 'undefined') { %>
            <img src="/images/<%= image %>" alt="<%- image %>" width="538"/>
        <% } %>

        <form method="post" enctype="multipart/form-data">
            <label for="myFile">Select image to upload:</label>

            <div class="progress" id="progressBar">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                    <span class="sr-only">40% Complete (success)</span>
                </div>
            </div>

            <p><input id="myFile" type="file" name="myFile" class="form-control"/></p>
            <p><input type="submit" id="uploadBtn" value="Upload" class="btn btn-primary"/></p>
        </form>

    </div>
</div>
