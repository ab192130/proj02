<ul class="media-list list-group">
    <% _.each(comments, function(comment) { %>
    <li class="media list-group-item">
        <a href="#" class="pull-left">
            <img class="media-object thumbnail" src="data:image/png;base64," alt="" />
        </a>
        <div class="media-heading"><a href="/user/<%= comment.author %>"><%= comment.author %></a>

            <div class="pull-right" style="font-size: 11px;">
                <a href="/comment/<%= comment.id %>/delete"><button type="button" aria-hidden="true" class="close">&times;</button></a>
            </div>

        </div>
        <div class="media-body">
            <%= comment.content %><br/>
            <div class="help-block" style="font-size: 11px;">Date: <%= comment.createdAt %></div>
        </div>
    </li>
    <% }); %>
</ul>